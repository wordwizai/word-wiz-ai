# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Azure Speech Services (for Pronunciation Assessment)
# Get free tier (5 hours/month) at: https://azure.microsoft.com/free/cognitive-services/
# Create Speech Service at: https://portal.azure.com
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Phoneme Backend Selection
# Options: auto (default: tries Azure first, falls back to ONNX), azure, onnx, pytorch
# Recommendation: Use "auto" to leverage Azure's free tier and better accuracy
PHONEME_BACKEND=auto

# ONNX Backend (legacy, for fallback)
USE_ONNX_BACKEND=true

# Database Configuration
DATABASE_URL=sqlite:///./users.db

# JWT Secret Key
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ElevenLabs TTS (optional)
ELEVENLABS_API_KEY=your_elevenlabs_key_here
