# Memory Optimization Environment Variables for Production
# Copy to .env and adjust values based on your deployment

# Memory monitoring (disable in production for performance)
ENABLE_MEMORY_LOGGING=false

# Memory cleanup settings
AGGRESSIVE_MEMORY_CLEANUP=true
MEMORY_CLEANUP_INTERVAL=5

# Audio cache settings (disable in production to save disk space)
ENABLE_AUDIO_CACHE=false
AUDIO_CACHE_CLEANUP_HOURS=1

# Model cache settings (enable for performance)
ENABLE_MODEL_CACHE=true
CLEAR_CACHE_AFTER_INIT=false

# Memory thresholds for a 4GB instance
MEMORY_WARNING_THRESHOLD_MB=3000
MEMORY_CRITICAL_THRESHOLD_MB=3500

# Additional optimizations for low-memory deployments
USE_QUANTIZATION=true
USE_FAST_MODELS=true
USE_COMPILATION=true
WARMUP_RUNS=1